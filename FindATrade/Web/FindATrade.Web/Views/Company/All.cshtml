@using FindATrade.Common
@using FindATrade.Web.ViewModels.Company;
@model AllCompaniesViewModel
@{
    this.ViewData["Title"] = "All Companies";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
</div>
<div class="text-center">
    <div class="row" style="height: auto !important;">
        <div class="col-md-12">
            <h1>Most popular</h1>
            <div class="row" style="height: auto !important">
                @foreach (var company in this.Model.AllCompanies)
                {
                    <div class="card col-md-3">
                        <img class="card-img-top" src="@company.OutputImageUrl" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@company.Name</h5>
                            <p class="card-text">@company.Description</p>
                            <a asp-controller="Company" asp-action="GetById" asp-route-id="@company.Id" class="btn btn-primary">Go to company</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>

<hr />
<partial name="_PagingPartial" model="@Model" />
