@using FindATrade.Web.ViewModels.CompanyService;
@model CreateCompanyServiceInputModel

@{
    this.ViewBag.Title = "Add Company Service";
}

<h1>@this.ViewBag.Title</h1>

<hr />

<form method="post" class="col-md-6 ofsset-md-3" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="form-label">Genre</label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Images"></label>
        <input asp-for="Images" class="form-control" />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    <hr />
    <p>You can add up to 3 Price Packages</p>
    <div id="PackagesContainer">
        <label asp-for="Packages"></label>
        <a class="btn btn-success" onclick="AddPackages()">+</a>
        <span asp-validation-for="Packages" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="button btn-primary" value="Add" />
</form>

@*TODO: Limit packages button*@

@section Scripts{
    <script>
        //Packages[0].Price
        //Packages[0].Description
        var index = 0;
        function AddPackages() {
            $("#PackagesContainer")
                .append("<div class='form-control'>Price: <input class='form-control' type='text' name='Packages[" + index + "].Price' /> Descrtiption: <input class='form-control' type='text' name='Packages[" + index + "].Description' /></div>");
            index++;
        }
    </script>
}