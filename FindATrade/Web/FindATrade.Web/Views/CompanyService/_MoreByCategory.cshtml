@using FindATrade.Web.ViewModels.CompanyService;
@model IEnumerable<CompanyServiceByCategoryModel>;

<h2>More services from this category</h2>
<div class="row gx-4 gx-lg-5">
    @foreach (var service in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body">
                    <div class="card-body">
                        @if (service.OutputImageUrl != null)
                        {
                            <img class="img-fluid rounded mb-4 mb-lg-0" src="@service.OutputImageUrl" alt="Image">
                        }
                        <h2 class="card-title">@service.Title</h2>
                        <p class="card-text">@(service.Description.Length > 30 ? service.Description.Substring(0, 30) : service.Description)</p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="CompanyService" asp-action="GetSingle" asp-route-id="@service.Id" class="btn btn-primary">See Service</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
