@using FindATrade.Common;
@using FindATrade.Web.ViewModels.CompanyService;
@model SingleServiceOutputModel

<p>Title = @Model.Title</p>
<p>Description = @Model.Description</p>
<p>Category = @Model.CategoryName</p>



@foreach (var item in Model.Packages)
{
    <p>Package-Description = @item.Description</p>
    <p>Package-Price = @item.Price</p>
}


@if (Model.Vetting != null && Model.Vetting.Passed == false)
{
    @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="AccountManagement" asp-controller="ManageAccount" asp-action="Vett" asp-route-id="@Model.Id">Vett this service</a>
        </li>
    }

    <p>@Model.Vetting.Description</p>
}
